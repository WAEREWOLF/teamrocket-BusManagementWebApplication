        <b>Search trips:</b>
    <p>
        <b>Arrival: </b> @Html.TextBox("Arrival", null, new { style = "color:black" })
    </p>

    <p>
        <b>Destination: </b> @Html.TextBox("Destination", null, new { style = "color:black" })
